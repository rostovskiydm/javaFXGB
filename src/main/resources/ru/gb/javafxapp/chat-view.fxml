<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.javafxapp.Controller">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <HBox alignment="BASELINE_RIGHT">
        <MenuBar>
            <Menu text="Options">
                <MenuItem text="Clear chat" onAction="#clickClearChat"/>
                <MenuItem text="Exit" onAction="#clickExit"/>
            </Menu>
        </MenuBar>
    </HBox>
    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS" promptText="Chat with me!" />
    <HBox spacing="10">
        <TextField fx:id="userSpeech" HBox.hgrow="ALWAYS" promptText="Write a message!"/>
        <Button text="Send" defaultButton="true" onAction="#clickSendButton"/>
    </HBox>

</VBox>